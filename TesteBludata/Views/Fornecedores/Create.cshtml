@model TesteBludata.Models.ViewModels.FornecedorFormViewModel

@{
    ViewData["Title"] = "Adicionar";
}

<h2>@ViewData["Title"]</h2>

<h4>Fornecedores</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Fornecedor.Nome" class="control-label"></label>
                <input asp-for="Fornecedor.Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Fornecedor.CPFCNPJ" class="control-label"></label>
                <input asp-for="Fornecedor.CPFCNPJ" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Fornecedor.RG" class="control-label"></label>
                <input asp-for="Fornecedor.RG" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Fornecedor.DataNascimento" class="control-label"></label>
                <input asp-for="Fornecedor.DataNascimento" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Fornecedor.EmpresaId" class="control-label"></label>
                <select asp-for="Fornecedor.EmpresaId" asp-items="@(new SelectList(Model.Empresas,"Id","RazaoSocial"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>